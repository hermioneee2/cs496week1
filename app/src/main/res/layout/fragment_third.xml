    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragmentThirdTop" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:elevation="2dp" />

        <!--Recycler view for displaying list of names-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRVNames"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <!--Recycler view for displaying list of universities-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRVUnivs"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/idRVNames"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <!--Recycler view for displaying list of year of admissions (student_id)-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/idRVSids"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/idRVUnivs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
